
@{
    ViewBag.Title = "LoginRegistration";
}

<div class="container carownerlog-reg-container mt-5">
    <h1 class="fw-bold text-center">LOGIN & REGISTRATION FOR CAROWNER</h1>
    <hr />
    <div class="row gx-5 gy-3">
        <div class="col-md-4"  style="background-color: cadetblue; border: 2px solid #254117; box-shadow: 0 10px 10px -5px; ">
            <div class="carownerlogin d-flex flex-column justify-content-center align-items-center" style="margin-top:90px;">
                <h4>Existing CarOwner?</h4>
                <h6>Log in here</h6>

                <form action="/carOwner/CarOwnerLogIn" method="post">
                    <div class="my-2">
                        <label for="Email" class="form-label">EMAIL ADDRESS: </label>
                        <input type="email" class="form-control" id="Email" name="ownerEmail" required>
                    </div>
                    <div class="my-2">
                        <label for="Password" class="form-label">PASSWORD: </label>
                        <input type="password" class="form-control" id="Password" name="ownerPassword" required>
                    </div>
                    <div class="my-4">
                        <button type="submit" class="carownerlogReg-btn">LOG ME IN</button>
                    </div>
                    <div class="col-12 my-2">
                        <label class="fw-bold fs-4 text-danger"> @ViewBag.logError</label>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-7"  style="background-color: cadetblue; border: 2px solid #254117; box-shadow: 0 10px 10px -5px; "> 
            <div class="carownerRegistration d-flex flex-column justify-content-center align-items-center">

                <h5 class="fw-bold">Create your account for registering your car.</h5>

                <form action="/carOwner/CarOwnerRegistration" method="post" class="row">
                    <div class="col-md-6 my-2">
                        <label for="Name" class="form-label">NAME: </label>
                        <input type="text" class="form-control" id="Name" name="ownerName" required>
                    </div>
                    <div class="col-md-6 my-2">
                        <label for="regEmail" class="form-label">EMAIL ADDRESS:</label>
                        <input type="email" class="form-control" id="regEmail" name="ownerEmail" required>
                    </div>
                    <div class="col-md-6 my-2">
                        <label for="regMobile" class="form-label">MOBILE NUMBER:</label>
                        <input type="text" class="form-control" id="regMobile" name="ownerPhone" required>
                    </div>
                    <div class="col-md-6 my-2">
                        <label for="nid" class="form-label">NID NUMBER:</label>
                        <input type="text" class="form-control" id="nid" name="ownerPassport" required>
                    </div>
                    <div class="col-12 my-2">
                        <label for="Address" class="form-label">ADDRESS:</label>
                        <input type="text" class="form-control" id="Address" name="ownerAddress" required>
                    </div>
                    
                    <div class="col-md-6 my-2">
                        <label for="Password" class="form-label">ENTER PASSWORD:</label>
                        <input type="password" class="form-control" id="Password" name="ownerPassword" required>
                    </div>
                    <div class="col-12 my-2">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck" required>
                            <label class="form-check-label" for="gridCheck">
                                I AGREE TO THE <span class="fst-italic fw-bold">RENT A RIDE</span> TERMS AND CONDITIONS.
                            </label>
                        </div>
                    </div>
                    <div class="col-12 my-2">
                        <button type="submit" class="carownerlogReg-btn">SIGN ME UP</button>
                    </div>
                    <div class="col-12 my-2">
                        <label class="fw-bold fs-4 text-success"> @ViewBag.RegSuccess</label>
                    </div>
                </form>

               
            </div>
        </div>
    </div>
</div>

